{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "outDir": "./dist"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/**",
    "action.js"
  ]
}